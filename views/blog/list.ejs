if (MCJS['pages'] && Pagination)
{
	MCJS['pages']['ajaxDataSrc'] = ['blogList'];
	MCJS['pages']['ajaxDataTarget'] = 'blogList';
	MCJS['pages']['jQuerySelector'] = '.blogListContainer .blogListItem';

	Pagination.init();
}
//-->
</script>