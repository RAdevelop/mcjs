	if(news['kw_names'].length>0){%>
	<div class="col-xs-12 col-md-12 paddingBottom10"><i class="fa fa-tags" aria-hidden="true"></i>
		<%-(news['kw_names'].map(function(kw_name){return `<a rel="tag" class="line" href="${[menuItem['m_path'], 'tag', kw_name].join(`/`)}/">${kw_name}</a>`;}).join(' '))%>
	</div><%
	}%><div class="col-xs-12 col-md-12 newsText"><%-news.n_text%></div>
	<div class="col-xs-12 col-md-12"><%- include news_images.ejs %></div>
</div>
