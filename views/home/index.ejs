<%  if(!_isXHR){%><%- layout('layout/default') %><% } -%><%

if (eventList.length) {%>
	<div class="row eventListContainer home">
		<div class="col-xs-12">
		<h2><a href="/events/">МотоСобытия</a></h2><%
		
		eventList.forEach(function (eItem)
		{
			let hasImg = (!!eItem["previews"]["512_384"]);
			let imgSrc = (hasImg ? eItem["previews"]["512_384"] : '/_0.gif');
			let eDate = (eItem["dd_start_ts"] == eItem["dd_end_ts"] ? [eItem["dd_start_ts"]] : [eItem["dd_start_ts"], eItem["dd_end_ts"]]).join(' &mdash; ');
		%><div class="eventListItem">
			<a  class="eventListItemInfo" href="<%=['events', eItem["e_id"], eItem["e_alias"]].join('/')%>/">
				<img src="<%=imgSrc%>" alt="<%=eItem["e_title"]%>"/>
				<div class="eventListItemInfoDate"><i class="fa fa-calendar" aria-hidden="true"></i>&nbsp;<%-eDate%></div>
				<div class="eventListItemInfoNotice">
					<p><%=eItem["e_title"]%></p>
					<p><%=eItem["e_notice"]%></p>
					<p><i class="fa fa-map-marker"></i>&nbsp;<%=eItem["e_address"]%></p>
				</div>
			</a>
		</div><%
		});
		%></div></div><%}%>
	<div class="row blogListContainer home">
		<div class="col-xs-12">
			<h2><a href="/blog/">Последнее в блогах</a></h2><%
			blogList.forEach(function (bItem)
			{
				let hasImg = (!!bItem["previews"]["512_384"]);
				let imgSrc = (hasImg ? bItem["previews"]["512_384"] : '/_0.gif');

				let ava = (!!bItem['user']['previews'] && bItem['user']['previews']['50_50']);
				let avaSrc = (ava ? bItem['user']['previews']['50_50'] : '/_0.gif');

				let blogHref = ['blog'];
				//if (user && user['u_id'])blogHref.push(user['u_id']);

				blogHref.push(bItem["b_id"], bItem["b_alias"]);

			%><div class="blogListItem">
				<% let  user_owner = bItem['user']; %><%- include ../user/owner.ejs %>
				<a class="blogListItemInfo" href="<%=blogHref.join('/')%>/" title="<%=bItem["b_title"]%>">
					<img src="<%=imgSrc%>" alt="<%=bItem["b_title"]%>"/>
					<div class="subject">Тема: <%=bItem["bs_name"]%></div>
					<div class="blogListItemInfoDate">
						<i class="fa fa-calendar" aria-hidden="true"></i>&nbsp;<%=bItem["dt_create_ts"]%>
					</div>
					<div class="blogListItemInfoNotice"><p><%=bItem["b_title"]%></p><p><%-bItem["b_notice"]%></p></div>
				</a>
			</div><%
			}); %>
		</div>
	</div>
<div class="row newsListContainer home">
	<div class="col-xs-12">
		<h2><a href="/news/">Новости</a></h2><%
		newsList.forEach(function (nItem)
		{
			let hasImg = (!!nItem["previews"]["512_384"]);
			let imgSrc = (hasImg ? nItem["previews"]["512_384"] : '/_0.gif');
		%><div class="newsListItem">
			<a  class="newsListItemInfo" href="<%=['news', nItem["n_id"], nItem["n_alias"]].join('/')%>/">
				<img src="<%=imgSrc%>" alt="<%=nItem["n_title"]%>"/>
				<div class="newsListItemInfoDate"><i class="fa fa-calendar" aria-hidden="true"></i>&nbsp;<%=nItem["dt_show_ts"]%></div>
				<div class="newsListItemInfoNotice"><p><%=nItem["n_title"]%></p><p><%-nItem["n_notice"]%></p></div>
			</a>
		</div><%
		}); %>
	</div>
</div>