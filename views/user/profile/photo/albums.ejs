<%  if(!_isXHR){%><%- layout('layout/user/index') %><% }%>
<ol class="breadcrumb">
	<li><a href="<%=menuItem['m_path']%>/"><%=menuItem['m_name']%></a></li>
	<li><a href="<%=(menuItem['m_path']+'/'+user['u_id']+'/')%>"><%=user['u_display_name']%></a></li>
</ol>
<div class="row media-list-toolbar">
	<div class="btn-toolbar" role="toolbar" aria-label="Опции для фотоальбомов"><%
		if(user && user["u_is_owner"]){%>
		<div class="btn-group btn-group-sm" role="group" aria-label="Опции для фотоальбомов">
			<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-fw fa-cog"></i> опции <i class="caret"></i></button>
			<ul class="dropdown-menu "><%
				if(album && album["a_is_owner"] && album["a_named"]){ %>
				<li><a href="javascript:void(0)" id="btn_album_upload"><i class="fa fa-fw fa-cloud-upload"></i> загрузить фотографии</a></li>
				<li><a href="javascript:void(0)" id="btn_edit_album_modal"><i class="fa fa-fw fa-edit"></i> изменить описание</a></li>
				<li><a href="javascript:void(0)" id="btn_del_album_modal"><i class="fa fa-fw fa-trash-o"></i> удалить альбом</a></li>
				<li role="separator" class="divider"></li><%
				} %>
				<li><a href="javascript:void(0)" id="btn_add_album_modal"><i class="fa fa-fw fa-plus-square-o"></i> создать новый альбом</a></li>
			</ul>
		</div><% }
		if(album){ %>
		<div class="btn-group btn-group-sm" role="group" aria-label="список альбомов">
			<a href="<%=_reqBaseUrl+(user ? '/'+user['u_id'] : '')%>/" class="btn btn-default"><i class="fa fa-fw fa-list"></i> все альбомы</a>
		</div><%
		} %>
		<div class="sharingSocNet" data-soc-list="vk,ok,fb,tw,gp"></div>
	</div>
</div>
<div class="row mediaWrapper albums">
	<div class="col-xs-12 col-sm-12 col-md-12"><%
		if(albums){ %><%- include album_list.ejs %><% }
		if(album){ %><%- include image_list.ejs %><% }
		%></div>
</div>
<%- include ../../../pages/index.ejs %>
<script src="/js/uploadify/jquery.uploadify.min.js" type="text/javascript" ></script>
<script src="/js/uploadify/jquery.uploadifive.min.js" type="text/javascript" ></script>
<script src="/js/uploadify/jquery.fileUpload.js" type="text/javascript"></script>
<script src="/js/mcMap.js" type="text/javascript"></script>
<script type="text/javascript" src="/js/jquery/mcAlbum.js"></script>
<script type="text/javascript">
//<!--
//console.log(MCJS);
if (MCJS['pages'] && Pagination)
{
	<% if(albums){ %>
	MCJS['pages']['ajaxDataSrc'] = ['albums'];
	MCJS['pages']['ajaxDataTarget'] = 'albums';
	MCJS['pages']['jQuerySelector'] = '.mediaList .media';
	<% } else if (album) {%>
	MCJS['pages']['ajaxDataSrc'] = ['album', 'images'];
	MCJS['pages']['ajaxDataTarget'] = 'albumImages';
	MCJS['pages']['jQuerySelector'] = '.imageList .image';
	<% } %>
	Pagination.init();
}
//console.log(Pagination);


(function($)
{
	var mcAlbumProps = {
		uri: '<%=_reqBaseUrl%>'
		, albumToolbar: '.media-list-toolbar'
		, albumWrapper: '.mediaWrapper .imageList'
		, albumImages: '.image'
		, albumName: '#a_name'
		, albumText: '#a_text'
		, u_id: '<%=(_user["u_id"])%>'
	};
	<% if(album && album["a_is_owner"]) { %>
	mcAlbumProps["s_token"] = '<%=(typeof s_token == 'undefined' ? '' : s_token)%>';
	mcAlbumProps["i_time"] = '<%=(typeof i_time == 'undefined' ? '' : i_time)%>';
	mcAlbumProps["sortable"] = (<%=(album && album["u_id"] == _user["u_id"])%>);
	<%}%>
	$('mcAlbum').mcAlbum(mcAlbumProps);
})($);
